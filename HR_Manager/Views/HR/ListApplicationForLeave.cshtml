@model IEnumerable<HR_Manager.Models.PhieuNghiPhep>

@{
    ViewBag.Title = "ListApplicationForLeave";
    Layout = "~/Views/HR/Layout_HR/Layout_HR.cshtml";
}

        <div class="row">
            <div class="col-xs-12">
                <div class="box box-info">
                    <div class="box-header">
                        <h3 class="box-title">List Application For Leave</h3>
                        <div class="box-tools">
                            <div class="input-group input-group-sm" style="width: 150px;">
                                <input type="text" name="table_search" class="form-control pull-right" placeholder="Search">
                                <div class="input-group-btn">
                                    <button type="submit" class="btn btn-default"><i class="fa fa-search"></i></button>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body table-responsive no-padding">
                        <table class="table table-hover">
                            <tr>
                                <th>@Html.DisplayName("Employee")</th>
                                <th>@Html.DisplayName("Type of Leave")</th>
                                <th>@Html.DisplayName("Date Create")</th>
                                <th>@Html.DisplayName("Leave From")</th>
                                <th>@Html.DisplayName("Leave End")</th>
                                <th>@Html.DisplayName("Status")</th>
                                <th></th>
                            </tr>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.NhanVien.HoTen)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.LoaiNghiPhep.TenLoaiNP)
                                    </td>
                                    <td>
                                        @Html.ValueFor(modelItem => item.NgayLapPNP, "{0:dd/MM/yyyy}")
                                    </td>
                                    <td>
                                        @Html.ValueFor(modelItem => item.NgayBDNghi, "{0:dd/MM/yyyy}")
                                    </td>
                                    <td>
                                        @Html.ValueFor(modelItem => item.NgayDiLam, "{0:dd/MM/yyyy}")
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.TrangThai)
                                    </td>
                                    <td>
                                        <a href="@Url.Action("DetailsApplicationForLeave","HR", new { id = item.SoPhieuNP, idNV = item.MaNV })" class="fa fa-info-circle icon-list"></a>
                                    </td>
                                </tr>
                            }
                        </table>
                    </div>
                    <!-- /.box-body -->
                </div>
                <!-- /.box -->
            </div>
        </div>
