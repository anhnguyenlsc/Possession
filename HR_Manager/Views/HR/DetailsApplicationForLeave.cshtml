@using HR_Manager.Models
@model HR_Manager.Models.PhieuNghiPhep

@{
    ViewBag.Title = "DetailsApplicationForLeave";
    Layout = "~/Views/HR/Layout_HR/Layout_HR.cshtml";
}

<div class="row">
    <div class="col-xs-12">
        <div class="box box-info">
            <div class="box-header">
                <h3 class="box-title" style="margin-left:300px;">
                    Application Information
                </h3>
            </div>
            <div class="box-body">
                <div class="col-md-6 image-detail-employee">
                    <img class="image-information-detail" style="height:360px;width:430px;margin-bottom:10px" src="@Model.AnhNghiPhepNV" alt="Ảnh Nghỉ Phép Nhân Viên" />
                </div>

                <!--Full Name-->
                <div class="col-md-6 detail-information-employee">
                    <div class="row">
                        <div class="col-md-6">
                            <fieldset>
                                <span>
                                    Full Name
                                </span>
                            </fieldset>
                        </div>
                        <div class="col-md-6">
                            <fieldset>
                                <p>
                                    @Html.DisplayFor(model => model.NhanVien.HoTen)
                                </p>
                            </fieldset>
                        </div>

                        <!--Type of Leave-->
                        <div class="col-md-6">
                            <fieldset>
                                <span>
                                    Type of Leave
                                </span>
                            </fieldset>
                        </div>
                        <div class="col-md-6">
                            <fieldset>
                                <p>
                                    @Html.DisplayFor(model => model.LoaiNghiPhep.TenLoaiNP)
                                </p>
                            </fieldset>
                        </div>

                        <!--Date Create-->
                        <div class="col-md-6">
                            <fieldset>
                                <span>
                                    Date Create
                                </span>
                            </fieldset>
                        </div>
                        <div class="col-md-6">
                            <fieldset>
                                <p>
                                    @Html.ValueFor(model => model.NgayLapPNP, "{0:dd/MM/yyyy}")
                                </p>
                            </fieldset>
                        </div>

                        <!--Leave From-->
                        <div class="col-md-6">
                            <fieldset>
                                <span>
                                    Leave From
                                </span>
                            </fieldset>
                        </div>
                        <div class="col-md-6">
                            <fieldset>
                                <p>
                                    @Html.ValueFor(model => model.NgayBDNghi, "{0:dd/MM/yyyy}")
                                </p>
                            </fieldset>
                        </div>

                        <!--Leave End-->
                        <div class="col-md-6">
                            <fieldset>
                                <span>
                                    Leave End
                                </span>
                            </fieldset>
                        </div>
                        <div class="col-md-6">
                            <fieldset>
                                <p>
                                    @Html.ValueFor(model => model.NgayDiLam, "{0:dd/MM/yyyy}")
                                </p>
                            </fieldset>
                        </div>

                        <!--Content-->
                        <div class="col-md-6">
                            <fieldset>
                                <span>
                                    Content
                                </span>
                            </fieldset>
                        </div>
                        <div class="col-md-6">
                            <fieldset>
                                <p>
                                    @Html.DisplayFor(model => model.NoiDungNP)
                                </p>
                            </fieldset>
                        </div>

                        <!--Status-->
                        <div class="col-md-6">
                            <fieldset>
                                <span>
                                    Status
                                </span>
                            </fieldset>
                        </div>
                        <div class="col-md-6">
                            <fieldset>
                                <p>
                                    @Html.DisplayFor(model => model.TrangThai)
                                </p>
                            </fieldset>
                        </div>

                        <div class="col-md-6">
                            <fieldset>
                                @if (ViewBag.showButton)
                                {
                                    <form action="~/HR/SendEmailApproveApplication" method="post" style="display:inline-block; margin-left:400px">
                                        <input type="hidden" name="catchEmail" class="form-control" value="@ViewBag.emailNV" />
                                        @Html.Hidden("SoPhieuNP", Model.SoPhieuNP)
                                        <button class="btn btn-success" type="submit" title="Click here to approve application">
                                            <i class="glyphicon glyphicon-send"></i>
                                        </button>
                                    </form>
                                }

                            </fieldset>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

