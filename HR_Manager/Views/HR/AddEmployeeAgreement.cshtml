@model HR_Manager.Models.HopDongLaoDong

@{
    ViewBag.Title = "AddEmployeeAgreement";
    Layout = "~/Views/HR/Layout_HR/Layout_HR.cshtml";
}

        <!-- Horizontal Form -->
        <div class="box box-info">
            <!-- form start -->
            @using (Html.BeginForm())
            {
                <form class="form-horizontal">
                    <!-- /.box-body -->
                    <div class="box-body">
                        <div class="col-md-6 image-add-profile">
                            <div class="form-group">
                                <div class="file-upload">
                                    <div class="image-upload-wrap">
                                        <input name="ImageUpload" class="file-upload-input" type='file' onchange="readURL(this);" accept="image/*" />
                                        <div class="image-icon-profile">
                                            <img src="@ViewBag.hinhNV" class="img-staff" />
                                        </div>
                                    </div>
                                    <div class="file-upload-content">
                                        <img class="file-upload-image" src="#" alt="your image" />
                                        <div class="image-title-wrap">
                                            <button type="button" onclick="removeUpload()" class="remove-image">Remove <span class="image-title">Uploaded Image</span></button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6 form-information-employee">
                            <!-- /.box-header -->
                            <div class="header-add-employee">
                                <p>Add New Employee Agreement</p>
                            </div>
                            <div class="row row-add">
                                <!--Mã Nhân Viên-->
                                <div class="col-md-6">
                                    <fieldset>
                                        <label for="HoTen" class="lable-add-employee">Mã Nhân Viên</label>
                                        <div class="">
                                            <input class="form-control" id="manv" type="text" value="@ViewBag.MaNV">
                                        </div>
                                    </fieldset>
                                </div>

                                <!--Loại hợp đồng-->
                                <div class="col-md-6">
                                    <fieldset>
                                        <label for="ChucVu" class="lable-add-employee">Loại Hợp Đồng</label>
                                        <div class="">
                                            @Html.DropDownList("MaLoaiHD", null, htmlAttributes: new { @class = "form-control" })
                                        </div>
                                    </fieldset>
                                </div>

                                <!--Ngày bắt đầu hợp đồng-->
                                <div class="col-md-6" >
                                    <fieldset >
                                        <label for="NgayBDHD" class="add-lower">Ngày Bắt Đầu Hợp Đồng </label>
                                        <div class="">
                                            @Html.TextBox("NgayBDHD", null, new
                                       {
                                           @class = "form-control",
                                           @id = "NgayBDHD",
                                           type = "date",
                                           placeholder = "mm/dd/yyyy",
                                       })
                                        </div>
                                    </fieldset>
                                </div>

                                <!--Ngày kết thúc hợp đồng-->
                                <div class="col-md-6">
                                    <fieldset>
                                        <label for="NgayKTHD" class="add-lower">Ngày Kết Thúc Hợp Đồng</label>
                                        <div class="">
                                            @Html.TextBox("NgayKTHD", null, new
                                       {
                                           @class = "form-control",
                                           @id = "NgayKTHD",
                                           type = "date",
                                           placeholder = "mm/dd/yyyy",
                                       })
                                        </div>
                                    </fieldset>
                                </div>
                            </div>
                        </div>
                        <!-- /.box-footer -->
                        <div class="box-footer">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Add" class="btn btn-info add-btn" />
                                <input type="submit" value="Cancel" class="btn btn-default cancel-btn" />
                            </div>
                        </div>
                    </div>

                </form>
            }
        </div>

