@model IEnumerable<HR_Manager.Models.NhanVien>

@{
    ViewBag.Title = "ListEmployee";
    Layout = "~/Views/HR/Layout_HR/Layout_HR.cshtml";
}


        <div class="row">
            <div class="col-xs-12">
                <div class="box box-info">
                    <div class="box-header">
                        <h3 class="box-title">List Employee</h3>
                        <div class="box-tools">
                            <form action="~/HR/ListEmployee" method="post">
                                <div class="input-group input-group-sm">

                                    <input type="text" name="search_employeelist" id="search_employeelist" class="form-control pull-right" placeholder="Search">

                                    <div class="input-group-btn">
                                        <button type="submit" class="btn btn-default"><i class="fa fa-search"></i></button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body table-responsive no-padding">
                        <table class="table table-hover">
                            <tr>
                                <th>@Html.DisplayName("Full Name")</th>
                                <th>@Html.DisplayName("Position")</th>
                                <th>@Html.DisplayName("Department")</th>
                                <th>@Html.DisplayName("Phone Number")</th>
                                <th>@Html.DisplayName("Literacy")</th>
                                <th>@Html.DisplayName("On Leave Remains")</th>
                                <th></th>
                            </tr>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.HoTen)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ChucVu.TenCV)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.PhongBan.TenPB)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.DienThoai)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.TrinhDoHocVan)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.SoNgayNPConLai)
                                    </td>
                                    <td>
                                        <a href="@Url.Action("DetailsEmployee","HR", new { id = item.MaNV })" class="fa fa-info-circle icon-list"></a>
                                        <a href="@Url.Action("AddEmployeeAgreement", "HR", new {idmaNV = item.MaNV})" class="fa fa-file-text"  style="margin-right:10px"></a>


                                        <a href="@Url.Action("AddEmployeeBusiness","HR", new { id = item.MaNV })" class="fa fa-briefcase"></a>
                                        
                                    </td>
                                </tr>
                            }
                        </table>
                    </div>
                    <!-- /.box-body -->
                </div>
                <!-- /.box -->
            </div>
        </div>

