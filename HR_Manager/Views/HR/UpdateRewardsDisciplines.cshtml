@model HR_Manager.Models.PhieuKLKT

@{
    ViewBag.Title = "UpdateRewardsDisciplines";
    Layout = "~/Views/HR/Layout_HR/Layout_HR.cshtml";
}

        <!-- Horizontal Form -->
        <div class="box box-info">
            <!-- form start -->
            @using (Html.BeginForm("UpdateRewardsDisciplines", "HR", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                <form class="form-horizontal">
                    <!-- /.box-body -->
                    <div class="box-body">
                        <div class="col-md-6 image-add-profile">
                            <div class="form-group">
                                <div class="file-upload">
                                    <div class="image-upload-wrap">
                                        <input name="ImageUpload" class="file-upload-input" type='file' onchange="readURL(this);" accept="image/*" />
                                        <div class="image-icon-profile">
                                            <img src="~/Images/System/add-profile.png" style="height:360px" />
                                        </div>
                                    </div>
                                    <div class="file-upload-content">
                                        <img class="file-upload-image" src="#" alt="your image" />
                                        <div class="image-title-wrap">
                                            <button type="button" onclick="removeUpload()" class="remove-image">Remove <span class="image-title">Uploaded Image</span></button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6 form-information-employee">
                            <!-- /.box-header -->
                            <div class="header-add-employee">
                                <p>Update Rewards And Disciplines</p>
                            </div>
                            <div class="row">
                                <!--Họ tên nhân viên-->
                                <div class="col-md-6">
                                    <fieldset>
                                        <label for="MaNV" class="lable-add-employee">Employee</label>
                                        <div class="">
                                            @Html.TextBox("MaNV", null, htmlAttributes: new { @class = "form-control", style = "border-radius:6px" })
                                        </div>
                                    </fieldset>
                                </div>

                                <!--Mã Phiếu Lương-->
                                <div class="col-md-6">
                                    <fieldset>
                                        <label for="PhieuLuong" class="lable-add-employee">Pay - slip</label>
                                        <div class="">
                                            @Html.DropDownList("MaPL", null, htmlAttributes: new { @class = "form-control", style = "border-radius:6px" })
                                        </div>
                                    </fieldset>
                                </div>

                                <!--Loại KT-->
                                <div class="col-md-6">
                                    <fieldset>
                                        <label for="LoaiKLKT" class="lable-add-employee">Type of Rewards & Disciplines</label>
                                        <div class="">
                                            @Html.DropDownList("MaKLKT", null, htmlAttributes: new { @class = "form-control", style = "border-radius:6px" })
                                        </div>
                                    </fieldset>
                                </div>

                                <!--Thời Gian-->
                                <div class="col-md-6">
                                    <fieldset>
                                        <label for="ThoiGian" class="lable-add-employee">Time</label>
                                        <div class="">
                                            @Html.TextBoxFor(m => m.ThoiGian, "{0:MM/dd/yyyy}", new { @class = "form-control", type = "date" })
                                        </div>
                                    </fieldset>
                                </div>

                                <!--Số Phiếu KLKT-->
                                        <div class="">
                                            @Html.HiddenFor(model => model.SoPhieuKLKT, new { htmlAttributes = new { @class = "form-control" } })
                                        </div>
                            </div>
                        </div>
                    </div>
                    <!-- /.box-footer -->
                    <div class="box-footer">
                        <button type="submit" class="btn btn-default">Cancel</button>
                        <button type="submit" class="btn btn-info pull-right">Update</button>
                    </div>

                </form>
            }
        </div>
