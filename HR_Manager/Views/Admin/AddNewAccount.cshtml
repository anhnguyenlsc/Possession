@using HR_Manager.Models
@model HR_Manager.Models.TaiKhoan

@{
    ViewBag.Title = "AddNewAccount";
    Layout = "~/Views/Admin/Layout_Admin/Layout_Admin.cshtml";
}

<div class="content-wrapper">
    <!-- (Page content) -->
    <section class="content">
        <!-- Horizontal Form -->
        <div class="box box-success" style="width:500px;margin: 0 auto;margin-top:80px">
            <div class="box-header">
                <h3 class="box-title">Add New Account</h3>
            </div>
            @using (Html.BeginForm("AddNewAccount", "Admin", FormMethod.Post, new { role = "form" }))
            {
                <div class="form-horizontal">
                    <div class="box-body">
                        <div class="form-group">
                            <!--Dropdownlist NhanVien-->
                            @Html.LabelFor(model => model.MaNV, "Mã Nhân Viên", htmlAttributes: new { @class = "col-sm-2 control-label" })
                            <div class="col-sm-10">
                                @Html.DropDownList("MaNV", (IEnumerable<SelectListItem>)ViewBag.dsNhanVien, new { @class = "form-control", style = "border-radius:6px" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.Username, htmlAttributes: new { @class = "col-sm-2 control-label" })
                            <div class="col-sm-10">
                                @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control", style = "border-radius:6px" } })
                                @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "col-sm-2 control-label" })
                            <div class="col-sm-10">
                                @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", style = "border-radius:6px" } })
                                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                            </div>
                        </div>


                        <div class="form-group">
                            <div>
                                <input type="submit" value="Create" class="btn btn-default" style="margin-left:430px" />
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </section>
</div>



