@model IEnumerable<HR_Manager.Models.TaiKhoan>

@{
    ViewBag.Title = "ListAccount";
    Layout = "~/Views/Admin/Layout_Admin/Layout_Admin.cshtml";
}

<div class="content-wrapper">
    <section class="content">
        <p>
            @Html.ActionLink("Add New", "AddNewAccount")
        </p>
        <div class="row">
            <div class="col-xs-12">
                <div class="box box-info">
                    <div class="box-header">
                        <h3 class="box-title">List Employee Account</h3>
                        <div class="box-tools">
                            <div class="input-group input-group-sm">
                                <input type="text" name="table_search" class="form-control pull-right" placeholder="Search">
                                <div class="input-group-btn">
                                    <button type="submit" class="btn btn-default"><i class="fa fa-search"></i></button>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body table-responsive no-padding">
                        <table class="table table-hover">
                            <tr>
                                <th>@Html.DisplayName("Full Name")</th>
                                <th>@Html.DisplayName("Position")</th>
                                <th>@Html.DisplayName("Department")</th>
                                <th>@Html.DisplayName("User name")</th>
                                <th>@Html.DisplayName("Password")</th>
                                <th></th>
                            </tr>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.NhanVien.HoTen)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.NhanVien.ChucVu.TenCV)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.NhanVien.PhongBan.TenPB)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Username)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Password)
                                    </td>
                                    <td>
                                    <td>
                                        <a href="" class="fa fa-trash" data-toggle="modal" data-target="#deleteaccountModal"></a>
                                        <!-- Xoá account Dialog Modal -->
                                        <div class="modal fade" id="deleteaccountModal">
                                            <div class="modal-dialog">
                                                <div class="modal-content">
                                                    <!-- Modal Header -->
                                                    <div class="modal-header">
                                                        <h3 class="modal-title"><strong>Delete Employee Account</strong></h3>
                                                    </div>
                                                    <!-- Modal body -->
                                                    <div class="modal-body">
                                                        Are you sure want to delete this account ?
                                                    </div>
                                                    <!-- Modal footer -->
                                                    <div class="modal-footer" style="border:none">
                                                        <a href="/Admin/DeleteAccount/@item.MaTK" class="btn btn-danger">Accept</a>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </table>
                    </div>
                    <!-- /.box-body -->
                </div>
                <!-- /.box -->
            </div>
        </div>
    </section>
</div>
